@model Proyecto_IDYGS81.Models.Usuarios

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>E-commerce</title>
    <link rel="stylesheet" href="~/css/indexLogin.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.33.1/sweetalert2.css">
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.33.1/sweetalert2.js"></script>

</head>

<body>
    
    <nav class="navi">
        <h1>E-Commerce</h1>
        <ul>
            <li><a class="nava" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a class="nava" asp-controller="Home" asp-action="About">About</a></li>
            <li><a class="nava" asp-controller="Home" asp-action="Contact">Contact</a></li>
        </ul>
        <div class="sign_btn"><a class="nava" asp-controller="Login" asp-action="Index">Sign in</a></div>

    </nav>
    <header>
    </header>

    <h2>Empieza a realizar tus compras</h2>
    <div class="container" id="container">
        
            <div class="form-container sign-up-container">
            <form asp-action="CrearUser" method="post" protection="All">
                    <h1>Crear Cuenta</h1>

                    <span>O usa tu email para suscribirte</span>
                    <input asp-for="Nombre" type="text" placeholder="Nombre" />
                    <input asp-for="Apellido" type="text" placeholder="Apellidos" />
                    <input asp-for="Correo" type="email" placeholder="Email" />
                    <input asp-for="Password" type="password" placeholder="Password" />
                    <button type="submit">Registrarse</button>
                </form>
            </div>
        
        <div class="form-container sign-in-container">
            <form asp-action="LoginUser" method="post">
                <h1>Inicia sesión</h1>
                <span>o usa tu cuenta</span>
                <input name="email" type="email" placeholder="Email" />
                <input name="Pass" type="password" placeholder="Password" />
                <a class="ases" href="#">¿Olvidaste tu contraseña?</a>
                <button type="submit">Iniciar sesion</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Bienvenido!</h1>
                    <p>Conectate para mantenerte al dia con los nuevos productos</p>
                    <button class="ghost" id="signIn">Iniciar sesion</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Hola ¡Bienvenido!</h1>
                    <p>Ingresa tus datos personales</p>
                    <button class="ghost" id="signUp">Registrate</button>
                </div>
            </div>
        </div>
    </div>

    <footer>
        <p>
            <i class="fa fa-heart"></i>
        </p>
    </footer>
    <!-- partial -->
    <script src="~/js/IndexLogin.js"></script>


    @if (ViewBag.Message != null)
    {
        <script>
    
                Swal.fire({
                    title: 'Success',
                    text: "Se creo tu cuenta correctamente",
                    type: 'success',
                });
        </script>
    }
    @if (ViewBag.Title != null)
    {
        <script>
            window.onload = función() {
                Swal.fire({
                    title: 'Warning',
                    text: "No se creo tu cuenta",
                    type: 'Warning',
                });
            };
        </script>
    }

</body>
</html>