@model Proyecto_IDYGS81.Models.Productos

@{
    ViewData["Title"] = "Crear";
    ViewData["Section"] = "Producto";
    Layout = "_LayoutDashboard";

}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title> proyecto_idygs81</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/LayoutDashboard.scss" />
    <link href="~/assets/vendors/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/vendors/general/sweetalert2/dist/sweetalert2.css" rel="stylesheet" type="text/css" />

</head>
<div class="modal-header">
   <center> <h5 class="modal-title" id="exampleModalLabel">@ViewData["Title"] @ViewData["Section"]</h5></center>
   
</div>



<form method="post" asp-action="Crear" id="formCrear">
    <div class="modal-body">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-12">
                <div class="form-group row">
                    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <label><font color="red">*</font> Nombre</label>
                        <input type="text" asp-for="NombreProducto" class="form-control" placeholder="Ingresa el nombre"  />
                        <span asp-validation-for="NombreProducto" class="form-text text-danger"></span>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <label><font color="red"></font> Descripci&oacute;n</label>
                        <input type="text" asp-for="Descripcion" class="form-control" rows="5" placeholder="Ingresa la descripcion" />
                        <span asp-validation-for="Descripcion" class="form-text text-danger"></span>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <label><font color="red"></font> Categoria</label>
                        <input type="text" asp-for="FKCategoria" class="form-control" placeholder="Ingrese la categoria" />
                        <span asp-validation-for="FKCategoria" class="form-text text-danger"></span>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <label><font color="red"></font> Costo</label>
                        <input type="text" asp-for="PrecioVenta" class="form-control" placeholder="Ingresa el costo de venta" />
                        <span asp-validation-for="PrecioVenta" class="form-text text-danger"></span>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <label><font color="red"></font> Cantidad en inventario</label>
                        <input type="text" asp-for="Inventario" class="form-control"  placeholder="Ingrese la cantidad total" />
                        <span asp-validation-for="Inventario"  class="form-text text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <span class="d-inline-block" tabindex="0" data-toggle="k-tooltip" data-skin="dark" title="" data-original-title="Cancelar">
            <a asp-controller="Productos" asp-action="Index"  type="button" class="btn btn-secondary flaticon-refresh" data-dismiss="modal" title="Cancelar"> Cancelar</a>
        </span>
        <span class="d-inline-block" tabindex="0" data-toggle="k-tooltip" data-skin="dark" title="" data-original-title="Guardar">
            <button type="submit" class="btn btn-primary flaticon-folder-1" title="Guardar"> Guardar</button>
        </span>
    </div>
</form>
